<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_just_java"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.janda_000.justjava.MainActivity">

    <TextView
        android:text="Quantity"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_quantity_text"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/add_order_button"
        android:text="+"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="increment"/>

    <TextView
        android:text="2"
        android:id="@+id/quantity_text_view"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/minus_order_button"
        android:text="-"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="decrement"/>

    <TextView
        android:text="Price"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header_price_view"
        android:paddingTop="16dp"/>

    <TextView
        android:text="$30.00"
        android:id="@+id/price_text_view"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textColor="@android:color/black"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:id="@+id/button_view"
        android:onClick="submitOrder"/>

</LinearLayout>
